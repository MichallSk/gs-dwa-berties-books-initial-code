<!doctype html>
<html>
  <head>
    <title>Audit log - <%= shopData.shopName %></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>Login audit log</h1>

    <% if (auditEntries && auditEntries.length > 0) { %>
      <table border="1" cellpadding="5" cellspacing="0">
        <thead>
          <tr>
            <th>Time</th>
            <th>Username</th>
            <th>Success</th>
            <th>IP address</th>
          </tr>
        </thead>
        <tbody>
          <% auditEntries.forEach(function(entry) { %>
            <tr>
              <td><%= entry.created_at.toISOString ? entry.created_at.toISOString() : entry.created_at %></td>
              <td><%= entry.username %></td>
              <td><%= entry.success ? 'Yes' : 'No' %></td>
              <td><%= entry.ip_address || '-' %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>No login attempts recorded yet.</p>
    <% } %>

    <p><a href="/">Back to homepage</a></p>
  </body>
</html>
